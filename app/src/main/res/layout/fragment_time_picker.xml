<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/activity_horizontal_margin"
    android:paddingVertical="@dimen/activity_vertical_margin"
    tools:context=".ui.eventDetailActivity.TimePicker.TimePickerFragment">

    <EditText
        android:id="@+id/date_availability"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_marginBottom="132dp"
        android:ems="10"
        android:inputType="text"
        android:autofillHints="Date (DD/MM/YY)"
        android:hint="Date (DD/MM/YY)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/time_availability"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_marginBottom="72dp"
        android:ems="10"
        android:inputType="text"
        android:autofillHints="Time (00:00-23:59)"
        android:hint="Time (00:00-23:59)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/add_button"
        android:layout_width="73dp"
        android:layout_height="63dp"
        android:layout_marginStart="308dp"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="@+id/time_availability"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/date_availability" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-125dp"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time_availability"
        app:layout_constraintVertical_bias="0.959" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAvailabilities"
        android:layout_width="382dp"
        android:layout_height="481dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/date_availability"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
